root = true

# Cấu hình chung cho tất cả các file
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# Java files
[*.java]
indent_size = 2
ij_java_imports_layout = java.**,|,javax.**,|,org.**,|,com.**,|,*
ij_java_class_count_to_use_import_on_demand = 999
ij_java_names_count_to_use_import_on_demand = 999
ij_java_use_single_class_imports = true

# XML files
[*.{xml,xsd,xsl,xslt,wsdl}]
indent_size = 2

# JSON, YAML, TOML, etc.
[*.{json,yml,yaml,toml}]
indent_size = 2

# Web files
[*.{html,htm,css,scss,js,ts,jsx,tsx}]
indent_size = 2

# Properties and Configuration files
[*.{properties,conf,config}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Batch files
[*.{cmd,bat}]
end_of_line = crlf 