root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.xml]
indent_size = 2

[*.yml]
indent_size = 2

[*.{js,jsx,ts,tsx,json,css,scss}]
indent_size = 2

[*.properties]
indent_size = 2

[*.md]
trim_trailing_whitespace = false 